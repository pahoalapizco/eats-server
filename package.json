{
  "name": "eats-server",
  "version": "1.0.0",
  "description": "A simple copy of Uber Eats for Devf course - server",
  "main": "index.js",
  "scripts": {
    "test": "set NODE_ENV=test&& set PORT=5000&& jest",
    "start": "node  ./build/index.js",
    "start:dev": "set NODE_ENV=dev&& set PORT=5000&& nodemon --exec babel-node --watch src ./src/index.js",
    "lint": "standard",
    "clean": "rm -rf build && mkdir build",
    "build-server": "babel -d ./build ./src -s",
    "build": "npm run  clean && npm run build-server"
  },
  "jest": {
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFilesAfterEnv": [
      "./jestSetup"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pahoalapizco/eats-server.git"
  },
  "author": "pahoalapizco",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pahoalapizco/eats-server/issues"
  },
  "homepage": "https://github.com/pahoalapizco/eats-server#readme",
  "dependencies": {
    "@babel/runtime": "^7.5.5",
    "apollo-server": "^2.8.2",
    "apollo-server-express": "^2.9.0",
    "bcrypt": "3.0.6",
    "cloudinary": "^1.14.0",
    "graphql": "^14.4.2",
    "isomorphic-fetch": "^2.2.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^5.6.10"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "chai": "^4.2.0",
    "dotenv": "^8.1.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.1",
    "request": "^2.88.0"
  }
}
